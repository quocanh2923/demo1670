@model IEnumerable<Demo3.Models.JobApplication>

@{
    ViewData["Title"] = "Index";
}

<h1>JobApplication</h1>

<p>
    <a type="button" class="btn btn-info"asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JobListing)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobSeeker)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationTime)
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.User)
            </th> *@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JobListing.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobSeeker.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationTime)
            </td>
            @* <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td> *@
            <td>
                    <a type="button" class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a type="button" class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
